<form action="/editInfo/edit" method="POST">
  <div class="row">
    <div class="col s6 offset-s3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title center">{{stocks.title}}</span>
          <table>
            <tr>
              <th>Цена</th>
              <td>
                <input id="price" name="price" value="{{stocks.price}}" />
              </td>
            </tr>
            <tr>
              <th>Количество</th>
              <td><input
                  id="items"
                  name="items"
                  value="{{stocks.items}}"
                /></td>
            </tr>
            <tr>
              <th>Див.Доходность</th>
              <td><input
                  id="costDiv"
                  name="costDiv"
                  value="{{stocks.costDiv}}"
                /></td>
            </tr>
            <tr>
              <th>Кол-во выплат в год</th>
              <td>
                <input
                  id="divDohInYear"
                  name="divDohInYear"
                  value="{{stocks.divDohInYear}}"
                />
              </td>
            </tr>
          </table>
        </div>
        <div class="card-action center">
          <a href="/">Отменить</a>
          <input type="hidden" name="id" value="{{stocks.id}}" />
          <button type="submit" class="btn">Сохранить</button>
          </form>
          <form action="/editInfo/remove" method="POST">
            <input type="hidden" name="id" value="{{stocks.id}}" />
            <button style="margin: 10px;" type="submit" class="btn red">Удалить</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</form>
